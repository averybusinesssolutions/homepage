        <MudImage Src="/images/logo.png" Height="50" Width="50"></MudImage>
        <MudText Typo="Typo.h5" Style="color:black">Avery Business Solutions</MudText>
        <MudSpacer> </MudSpacer>
        <MudButton Href="/contact">Contact</MudButton>
